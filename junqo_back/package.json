{
    "name": "junqo_back",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "generate_types": "npx ts-node generate_typing.ts",
        "build": "npm run generate_types && nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "npm run generate_types && NODE_ENV=development nest start",
        "start:dev": "npm run generate_types && nest start --watch",
        "start:debug": "npm run generate_types && NODE_ENV=development nest start --debug --watch",
        "start:prod": "npm run generate_types && node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "npm run generate_types && jest",
        "test:watch": "npm run generate_types && jest --watch",
        "test:cov": "npm run generate_types && jest --coverage",
        "test:debug": "npm run generate_types && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "npm run generate_types && DOTENV_CONFIG_PATH=.env.test jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@casl/ability": "^6.7.2",
        "@nestjs/apollo": "^12.2.1",
        "@nestjs/cli": "^10.4.5",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.4.6",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "^2.0.5",
        "@nestjs/platform-express": "^10.4.6",
        "@nestjs/sequelize": "^10.0.1",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.7",
        "graphql": "^16.9.0",
        "graphql-subscriptions": "^2.0.0",
        "graphql-tools": "^9.0.2",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "sequelize": "^6.37.5",
        "sequelize-typescript": "^2.1.6",
        "ts-morph": "^21.0.1"
    },
    "devDependencies": {
        "@nestjs/graphql": "^12.2.2",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@suites/di.nestjs": "^3.0.0",
        "@suites/doubles.jest": "^3.0.0",
        "@suites/unit": "^3.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "testcontainers": "^10.16.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}